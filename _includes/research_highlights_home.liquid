{% assign highlights = site.data.research_highlights | sort: 'importance' %}
<div class="home-research-highlights">
  {% for project in highlights limit:6 %}
    <div class="hrh-item">
      <div class="hrh-header">
        <h3 class="hrh-title">{{ project.title }}</h3>
        <div class="hrh-authors">
          {% for author in project.authors %}
            {% if author.name contains "Md Zarif Hossain" or author.name contains "MZ. Hossain" %}
              <span class="hrh-author hrh-author-me">{{ author.name }}</span>
            {% else %}
              <span class="hrh-author">{{ author.name }}</span>
            {% endif %}{% unless forloop.last %}, {% endunless %}
          {% endfor %}
        </div>
        <div class="hrh-meta">
          <span class="hrh-venue">{{ project.venue }}</span>
          {% if project.status %}
            <span class="hrh-status">{{ project.status }}</span>
          {% endif %}
        </div>
      </div>
      
      <div class="hrh-links">
        {% for link in project.links %}
          <a href="{{ link.url }}" class="hrh-btn" target="_blank">
            <i class="fas {{ link.icon }}"></i> {{ link.name }}
          </a>
        {% endfor %}
      </div>
      
      <div class="hrh-architecture">
        <div class="hrh-arch-image">
          <img src="assets/img/{{ project.image }}" alt="{{ project.image_alt }}" class="img-fluid">
        </div>
        <div class="hrh-arch-caption">
          <strong>{{ project.image_alt }}:</strong> {{ project.description }}
        </div>
      </div>
    </div>
  {% endfor %}
</div>

<style>
.home-research-highlights {
  margin-top: 0.5rem;
}

.hrh-item {
  margin-bottom: 1rem;
  padding: 1rem;
  border-radius: 8px;
  background-color: #f8f9fa;
  box-shadow: 0 2px 8px rgba(0,0,0,0.08);
}

.hrh-header {
  margin-bottom: 0.75rem;
}

.hrh-title {
  font-size: 1.2rem;
  font-weight: bold;
  margin: 0 0 0.4rem 0;
  line-height: 1.3;
  color: #333;
}

.hrh-authors {
  font-size: 0.85rem;
  color: #555;
  margin-bottom: 0.4rem;
  line-height: 1.4;
}

.hrh-author {
  font-weight: 400;
}

.hrh-author-me {
  font-weight: bold !important;
  color: #333 !important;
  font-size: 0.9rem;
}

.hrh-meta {
  font-size: 0.8rem;
  color: #666;
  display: flex;
  gap: 0.75rem;
  align-items: center;
  flex-wrap: wrap;
  margin-bottom: 0.75rem;
}

.hrh-venue {
  font-style: italic;
  font-size: 0.9rem;
  color: #555;
  font-weight: 500;
}

.hrh-status {
  background: #eef7ee;
  color: #1b5e20;
  border: 1px solid #cde7cd;
  border-radius: 15px;
  padding: 0.15rem 0.6rem;
  font-size: 0.8rem;
  font-weight: 500;
  text-transform: uppercase;
}

.hrh-links {
  margin-bottom: 1rem;
  display: flex;
  gap: 0.5rem;
  flex-wrap: wrap;
}

.hrh-btn {
  display: inline-flex;
  align-items: center;
  gap: 0.4rem;
  padding: 0.4rem 0.8rem;
  border-radius: 8px;
  border: 1px solid #007bff;
  color: #007bff;
  font-size: 0.85rem;
  font-weight: 500;
  text-decoration: none;
  transition: all 0.3s ease;
}

.hrh-btn:hover {
  background: #007bff;
  color: #fff;
  text-decoration: none;
  transform: translateY(-1px);
}

.hrh-architecture {
  border: 2px solid #000;
  border-radius: 8px;
  padding: 1rem;
  background-color: white;
  box-shadow: 0 3px 12px rgba(0,0,0,0.1);
}

.hrh-arch-image {
  text-align: center;
  margin-bottom: 0.75rem;
}

.hrh-arch-image img {
  max-width: 100%;
  height: auto;
  border-radius: 6px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.08);
}

.hrh-arch-caption {
  font-size: 0.95rem;
  color: #555;
  text-align: center;
  font-style: italic;
  line-height: 1.4;
  padding: 0.75rem;
  background-color: #f8f9fa;
  border-radius: 6px;
  border: 1px solid #e9ecef;
}

/* Responsive */
@media (max-width: 768px) {
  .hrh-item {
    padding: 0.75rem;
    margin-bottom: 0.75rem;
  }
  
  .hrh-title {
    font-size: 1.1rem;
  }
  
  .hrh-authors {
    font-size: 0.8rem;
  }
  
  .hrh-architecture {
    padding: 0.75rem;
  }
  
  .hrh-links {
    justify-content: center;
  }
}
</style> 